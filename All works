Tarea #1 - Matías Herrera Vanegas - Multiplicación sin operadores

using System;

class Multiplicar
{
    static int Multiplicacion(int N1, int N2)
    {
        int resultado = 0;

        int multiplicador = Math.Abs(N2);
        for (int i = 0; i < multiplicador; i++)
        {
            resultado += N1;
        }

        if (N2 < 0)
        {
            resultado = -resultado;
        }

        return resultado;
    }

    static void Main()
    {
        // Ejemplos
        Console.WriteLine($"El resultado de la multiplicacion de 1 y -4 es: {Multiplicacion(1, -4)}");
        Console.WriteLine($"El resultado de la multiplicacion de -4 y 7 es: {Multiplicacion(-4, 2)}");
        Console.WriteLine($"El resultado de la multiplicacion de 2 y 10 es: {Multiplicacion(2, 10)}");
        Console.WriteLine($"El resultado de la multiplicacion de -7 y -5 es: {Multiplicacion(-7, -5)}");
    }
}

Tarea #2 - Matías Herrera Vanegas - Suma de valores máximos

using System;

public class Ejercicio2
{
    static int maximo_entero = int.MaxValue;
    static double maximo_doble = double.MaxValue;
    static float maximo_float = float.MaxValue;
    static long maximo_long = long.MaxValue;

    public static void Main(string[] args)
    {
        // Valores maximos de cada tipo
        Console.WriteLine("El valor maximo de (int) es: " + maximo_entero);
        Console.WriteLine("El valor maximo de (double) es: " + maximo_doble);
        Console.WriteLine("El valor maximo de (float) es: " + maximo_float);
        Console.WriteLine("El valor maximo de (long) es: " + maximo_long);
        Console.WriteLine("- - - - - - - - - - - - - - - - - - -");

        // Operacion de suma
        long suma_enteros = (long)maximo_entero + maximo_entero;
        double suma_doble = maximo_doble + maximo_doble;
        float suma_float = maximo_float + maximo_float;
        long suma_long = maximo_long + maximo_long;

        // Mostrar los resultados
        string mensaje = "La suma de los valores maximos de (int) es: " + suma_enteros + "\n" +
                         "La suma de los valores maximos de (double) es: " + suma_doble + "\n" +
                         "La suma de los valores maximos de (float) es: " + suma_float + "\n" +
                         "La suma de los valores maximos de (long) es: " + suma_long;

        Console.WriteLine(mensaje);
        
    }        
}        

Tarea #3 Matías Herrera Vanegas - Actividad Matrices
using System;

public class SumMatrix
{
    public static void Main(string[] args)
    {
        // Matriz 1
        int[][] m1 = new int[][] 
        {
            new int[] {2, 3},
            new int[] {4, 5}
        };
        // Matriz 2
        int[][] m2 = new int[][] 
        {
            new int[] {5, 6},
            new int[] {7, 8}
        };

        // Crear una matriz para el resultado
        int[][] result = new int[m1.Length][];

        // LLamar función
        SumMatrices(m1, m2, result, 0, 0);

        // Imprimir 
        foreach (var row in result)
        {
            Console.WriteLine(string.Join(" ", row));
        }
    }

    // Función para sumar las matrices
    public static void SumMatrices(int[][] m1, int[][] m2, int[][] result, int i, int j)
    {
        // Verifica si se han recorrido las filas
        if (i == m1.Length) return;

        // Si es el inicio de una fila crea un arreglo para almacenar
        if (j == 0) result[i] = new int[m1[i].Length];

        // Sumar los elementos de las matrices y guardar el resultado
        result[i][j] = m1[i][j] + m2[i][j];

        // llamda para el siguiente elemento en la misma fila o la siguiente fila
        SumMatrices(m1, m2, result, i + (j + 1) / m1[i].Length, (j + 1) % m1[i].Length);
    }
}
